doctype html
html
    head
        title Log In
        link(href='/styles/bootstrap.css', rel='stylesheet')
        link(href='/styles/bootstrapjumbo.css', rel='stylesheet')
        link(href='/styles/font-awesome.css', rel='stylesheet')
        link(href='/styles/font-awesomeicon.css', rel='stylesheet')
        //script(type='text/javascript', src='https://code.jquery.com/jquery-3.0.0.min.js')
        script(type='text/javascript', src='/angular/jquery.js')
        script(type='text/javascript', src='/styles/bootstrap.js')
        script(type='text/javascript', src='/angular/angular.min.js')
        script(type='text/javascript', src='/angular/angular-route.js')
        //link(href='https://netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', rel='stylesheet')
        //link(href='https://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css', rel='stylesheet')
        //script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js')
        script(type='text/javascript', src='/angular/app.js')
        script(type='text/javascript', src='/angular/registercontroller.js')
        script(type='text/javascript', src='/angular/logincontroller.js')
    body(data-ng-controller='loginCtrl', data-ng-app='myModule')
        .container
            nav.navbar.navbar-inverse.navbar-fixed-top
                .container
                    ul.active.nav.nav-pills.pull-left
                        li(role='presentation')
                            a.navbar-brand(href='/') Home
                        li(role='presentation')
                            a.btn.btn-primary.btn-sm(href='/Login') Login
                        li(role='presentation')
                            a.navbar-brand(href='/signup') Register
                .jumbotron
                    h2 King Dance Academy
                    p.lead
                        | Please login here.
                        | Then only you can visit our site and know the types of dance and all the informations...
                    p
                      form.margin-base-vertical(name='form', method='post', action='/login' novalidate='')
                        .container
                            if message.length > 0
                                .alert.alert-danger
                                    p #{message}
                            .row
                                .col-md-4.col-md-offset-4.panel.panel-default
                                    h2.margin-base-vertical(align='center') Log In
                                    p.input-group
                                        span.input-group-addon
                                            span.icon-envelope
                                        input.form-control.input-md(type='email', class='form-control' required='', id='email', name='email', data-ng-model='registration.email',placeholder='Email Id' data-ng-required='true')
                                        span.error(style='color:red', data-ng-show='form.email.$invalid && form.email.$dirty')
                                            | please enter valid email id
                                    p.input-group
                                        span.input-group-addon
                                            span.icon-key
                                        input.form-control.input-md(type='password', required='', name='password', data-ng-model='registration.password', placeholder='Password' data-ng-required='true')
                                        span.error(style='color:red', data-ng-show='form.password.$invalid && form.password.$dirty')
                                            | please enter your valid password
                                    div(style='text-align: center')
                                        button.btn.btn-primary.btn-md.text-center(data-ng-disabled='form.$invalid', type='submit') Log In
                                    br